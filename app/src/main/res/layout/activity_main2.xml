<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#FDF8F8"
    tools:context=".MainActivity2">

    <ImageView
        android:id="@+id/imgBanh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvTiTleBanh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="TITLE"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgBanh" />

    <TextView
        android:id="@+id/tvContentBanh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="CONTENT"
        app:layout_constraintStart_toStartOf="@+id/tvTiTleBanh"
        app:layout_constraintTop_toBottomOf="@+id/tvTiTleBanh" />

    <TextView
        android:id="@+id/tvPriceBanh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="PRICE"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tvContentBanh"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTiTleBanh" />

    <TextView
        android:id="@+id/tvDeliveryIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Delivery in"
        app:layout_constraintBottom_toBottomOf="@+id/imgDongHo"
        app:layout_constraintStart_toEndOf="@+id/imgDongHo"
        app:layout_constraintTop_toTopOf="@+id/imgDongHo" />

    <TextView
        android:id="@+id/tvSoGio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:text="30 min"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgDongHo" />

    <ImageView
        android:id="@+id/imgDongHo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="@+id/tvContentBanh"
        app:layout_constraintTop_toBottomOf="@+id/tvContentBanh"
        app:srcCompat="@drawable/dongho" />

    <ImageButton
        android:id="@+id/imgBtnGiam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:backgroundTint="#FAF8F8"
        app:layout_constraintBottom_toBottomOf="@+id/tvSoGio"
        app:layout_constraintEnd_toStartOf="@+id/imgBtnTang"
        app:layout_constraintTop_toTopOf="@+id/tvSoGio"
        app:layout_constraintVertical_bias="0.529"
        app:srcCompat="@drawable/giam" />

    <ImageButton
        android:id="@+id/imgBtnTang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#FAF8F8"
        app:layout_constraintBottom_toBottomOf="@+id/imgBtnGiam"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgBtnGiam"
        app:srcCompat="@drawable/tang" />

    <TextView
        android:id="@+id/tvSoLuong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tvSoGio"
        app:layout_constraintEnd_toStartOf="@+id/imgBtnTang"
        app:layout_constraintStart_toEndOf="@+id/imgBtnGiam"
        app:layout_constraintTop_toTopOf="@+id/tvSoGio" />

    <TextView
        android:id="@+id/tvRestaurantsInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Restaurants info"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSoGio" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="DESCRIPTION"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/tvRestaurantsInfo"
        app:layout_constraintTop_toBottomOf="@+id/tvRestaurantsInfo" />

    <Button
        android:id="@+id/btnAddToCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#F1B000"
        android:text="Add To Card"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDescription" />
</androidx.constraintlayout.widget.ConstraintLayout>