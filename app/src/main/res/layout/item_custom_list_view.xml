<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/idLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F4DDDD"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgBanh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:layout_weight="1"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTiTleBanh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:text="TITLE"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvContentBanh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:text="CONTENT" />

        <TextView
            android:id="@+id/tvPriceBanh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:text="PRICE"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold" />
    </LinearLayout>

        <ImageView
            android:id="@+id/imgCongBanh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="96dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="6dp"
            app:srcCompat="@drawable/plus_button" />

    <!--<ImageButton
        android:id="@+id/imgCongBanh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="96dp"
        android:layout_marginRight="6dp"
        android:layout_weight="1"
        android:backgroundTint="#F4DDDD"
        app:srcCompat="@android:drawable/checkbox_on_background" />-->

</LinearLayout>